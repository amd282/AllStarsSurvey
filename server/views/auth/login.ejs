
<%- include('../partials/header.ejs'); %>

<div class="text">
    <main class="container">
    <!-- Message Area -->
    <%if(messages.length > 0) {%>
        <div class="alert alert-danger">
            <%= messages %>
        </div>

    <% } %>
        <div class="login bgc2">
            <div class="">
                <h1>Please Login</h1>
                <form method="POST" autocomplete="off">
                    <fieldset class="form-group">
                        <label for="username">Username: </label>
                        <input type="text" maxlength="60" 
                        size="40" name="username" placeholder="Enter Username" 
                        id="username" class="input" required autofocus>
                    </fieldset>

                    <fieldset class="form-group">
                        <label for="password">Password: </label>
                        <input type="password" maxlength="60" 
                        size="40" name="password" placeholder="Enter Password" 
                        id="password" class="input" required> <br><br>
                        or
                        <a href="/register">Register Here</a>
                    </fieldset>

                    <fieldset class="form-group text-center">
                        <input type="submit" class="btn btn-success" value="Login">
                        <a href="/">
                            <input type="button" class="btn btn-warning" value="Cancel">
                        </a>
                    </fieldset>

                </form>
            </div>
        </div>
    </main>
</div>



<%- include('../partials/footer.ejs'); %>